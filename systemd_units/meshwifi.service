[Unit]
Description=Mesh Wifi service
ConditionPathExists=/tmp/wifi_initialized

[Service]
Type=oneshot
WorkingDirectory=/usr/ccsp/wifi

ExecStartPre=/bin/echo "Mesh Wifi Starting"
ExecStart=/usr/ccsp/wifi/handle_mesh start

ExecStop=/usr/ccsp/wifi/handle_mesh stop
ExecStopPost=/bin/echo "Mesh Wifi Stopping"
Restart=no
RemainAfterExit=yes

StandardOutput=syslog+console

